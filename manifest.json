{
    "manifest_version": 3,
    "name": "Retail Agent",
    "version": "1.0",
    "description": "AI-powered Amazon shopping assistant",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://www.amazon.in/*",
        "https://generativelanguage.googleapis.com/*"
    ],
    "background": {
        "service_worker": "src/background/service_worker.js",
        "type": "module"
    },
    "action": {
        "default_popup": "src/popup/index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.amazon.in/*"
            ],
            "js": [
                "src/content/amazon.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}